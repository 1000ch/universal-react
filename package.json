{
  "name": "universal-react",
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node dist/server.js",
    "babel": "babel src --out-dir dist",
    "babel:watch": "babel src --out-dur dist --watch",
    "client": "npm run client:bundle && npm run client:minify",
    "client:bundle": "browserify --entry dist/client.js > dist/bundle.js",
    "client:minify": "uglifyjs --compress --mangle -- dist/bundle.js > dist/bundle.min.js",
    "client:watch": "watchify dist/client.js -o dist/bundle.js -v",
    "watch": "npm run babel:watch & npm run client:watch",
    "build": "npm run babel && npm run client"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/1000ch/universal-react.git"
  },
  "author": "1000ch",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/1000ch/universal-react/issues"
  },
  "homepage": "https://github.com/1000ch/universal-react#readme",
  "dependencies": {
    "body-parser": "^1.14.1",
    "cookie-parser": "^1.4.0",
    "express": "^4.13.3",
    "fluxible": "^1.0.3",
    "fluxible-addons-react": "^0.2.2",
    "fluxible-router": "^0.4.1",
    "react": "^0.14.3",
    "react-dom": "^0.14.3",
    "serialize-javascript": "^1.1.2"
  },
  "devDependencies": {
    "babel": "^5.8.34",
    "browserify": "^12.0.1",
    "uglify-js": "^2.6.1",
    "watchify": "^3.6.1"
  }
}
